{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "module": "none",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/vue/types/",
      "node_modules/@types",
      "typescript"
    ]
  },
  "exclude": [
    "node_modules",
    "venv"
  ],
  "include": [
    "**/*"
  ]
}
