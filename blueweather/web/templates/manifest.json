{% set apple_icons = ['57', '60', '72', '76', '114', '120', '144', '152', '180'] %}
{% set favicon_icons = ['32', '96', '16'] %}

{
    "short_name": "Blueweather",
    "name": "Blue Weather",
    "icons": [
      {% for icon in apple_icons %}
      {% set ico_name = 'favicon/apple-icon-' + icon + 'x' + icon + '.png' %}
      {
        "src": "{{ url_for('static', filename=ico_name) }}",
        "type": "image/png",
        "sizes": "{{ icon }}x{{ icon }}"
      },
      {% endfor %}
      {% for icon in favicon_icons %}
      {% set ico_name = 'favicon/favicon-' + icon + 'x' + icon + '.png' %}
      {
        "src": "{{ url_for('static', filename=ico_name) }}",
        "type": "image/png",
        "sizes": "{{ icon }}x{{ icon }}"
      },
      {% endfor %}
      {
        "src": "{{ url_for('static', filename="favicon/android-icon-192x192.png") }}",
        "type": "image/png",
        "sizes": "192x192"
      }
    ],
    "start_url": "/",
    "background_color": "#343a40",
    "display": "standalone",
    "scope": "/",
    "theme_color": "#343a40"
}